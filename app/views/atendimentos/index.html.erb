<p id="notice"><%= notice %></p>

<h1>Atendimentos</h1>

<table>
  <thead>
    <tr>
      <th>Situacao</th>
      <th>Sintomas</th>
      <th>Tempochegada</th>
      <th>Tipoatendimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
        <td><%= atendimento.situacao %></td>
        <td><%= atendimento.sintomas %></td>
        <td><%= atendimento.tempoChegada %></td>
        <td><%= atendimento.tipoAtendimento %></td>
        <td><%= link_to 'Show', atendimento %></td>
        <td><%= link_to 'Edit', edit_atendimento_path(atendimento) %></td>
        <td><%= link_to 'Destroy', atendimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

